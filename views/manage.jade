extends layout

block content
  .container
    h4
      b Application flow diagram - Demo
    .jumbotron
      form.form-horizontal(method="post", action="/manage")
        div.form-group
          label.col-sm-2.control-label Application Status
          div.col-sm-10
            select.form-control(name="statuscode")
              #appstatuses
              for appstatus in appstatuses
                option(value="#{appstatus.appstatuscode}", selected= appstatus.appstatuscode==statuscode)
                  = appstatus.appstatus
        br
        br
        a(role='button', style='float:left')#addNodeId.btn.btn-primary Add Status
        a(type='submit', style='float:right')#saveAppFlowId.btn.btn-primary Save App Flow
        br
        br
        #flowDiagramDivId(style='width: 100%; height: 400px; border: 1px solid black;')


block pagescript
  script(src='/javascripts/appflow_manage.js')
